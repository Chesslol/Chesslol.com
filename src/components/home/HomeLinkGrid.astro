---
import LinkCard from '../LinkCard.astro';
import { links } from '../../data/links';

interface Props {
  variant?: 'default' | 'a' | 'b';
}

const { variant = 'default' } = Astro.props as Props;
const gridClass = variant === 'b' ? 'grid gap-6 sm:grid-cols-2 lg:grid-cols-3 xl:gap-8' : 'grid gap-6 sm:grid-cols-2 lg:grid-cols-3';
---
<div class={gridClass}>
  {links.map((link) => (
    <LinkCard {...link} />
  ))}
</div>
