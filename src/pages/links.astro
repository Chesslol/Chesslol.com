---
import BaseLayout from '../layouts/BaseLayout.astro';
import LinkCard from '../components/LinkCard.astro';
import { links } from '../data/links';
import { siteConfig } from '../config/site';
---
<BaseLayout title={`Links â€” ${siteConfig.name}`} description={`Explore every Chesslol link in one place.`}>
  <section class="bg-white py-16 dark:bg-slate-950 sm:py-20">
    <div class="mx-auto flex w-full max-w-6xl flex-col gap-10 px-4 sm:px-6">
      <header class="max-w-3xl">
        <h1 class="text-3xl font-semibold tracking-tight text-slate-900 sm:text-4xl dark:text-white">Links</h1>
        <p class="mt-3 text-base text-slate-600 dark:text-slate-300">
          Jump straight to the current Chesslol experiences, communities, and social channels.
        </p>
      </header>
      <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
        {links.map((link) => (
          <LinkCard {...link} />
        ))}
      </div>
    </div>
  </section>
</BaseLayout>
