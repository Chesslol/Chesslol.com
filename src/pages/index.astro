---
import BaseLayout from '../layouts/BaseLayout.astro';
import LinkCard from '../components/LinkCard.astro';
import { siteConfig } from '../config/site';
import { links } from '../data/links';

const featuredLinks = links.slice(0, 3);
---
<BaseLayout title={`${siteConfig.name} â€” ${siteConfig.tagline}`} description={siteConfig.description}>
  <section class="relative overflow-hidden bg-gradient-to-b from-white via-white to-surface-light pb-16 pt-20 dark:from-slate-950 dark:via-slate-950 dark:to-surface-dark sm:pb-24 sm:pt-28">
    <div class="pointer-events-none absolute inset-x-0 top-0 mx-auto h-[520px] max-w-4xl rounded-full bg-primary/20 blur-3xl dark:bg-primary/30"></div>
    <div class="relative mx-auto flex w-full max-w-6xl flex-col gap-12 px-4 sm:px-6">
      <div class="max-w-3xl">
        <span class="mb-4 inline-flex items-center gap-2 rounded-full border border-primary/20 bg-primary/10 px-4 py-1 text-xs font-semibold uppercase tracking-wide text-primary">Coming Soon</span>
        <h1 class="text-balance text-4xl font-bold tracking-tight text-slate-900 sm:text-5xl lg:text-6xl dark:text-white">{siteConfig.name}</h1>
        <p class="mt-6 max-w-xl text-lg text-slate-600 dark:text-slate-300">{siteConfig.tagline}</p>
        <p class="mt-4 max-w-2xl text-base text-slate-500 dark:text-slate-400">{siteConfig.description}</p>
        <div class="mt-8 flex flex-col gap-4 sm:flex-row">
          <a
            href={siteConfig.socials.tiktok}
            target="_blank"
            rel="noreferrer noopener"
            class="inline-flex items-center justify-center rounded-full bg-primary px-6 py-3 text-base font-semibold text-primary-foreground shadow-glow transition hover:brightness-110 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-primary focus-visible:ring-offset-2"
          >
            Follow on TikTok
          </a>
          <a
            href={siteConfig.socials.youtube}
            target="_blank"
            rel="noreferrer noopener"
            class="inline-flex items-center justify-center rounded-full border border-slate-300 px-6 py-3 text-base font-semibold text-slate-700 transition hover:border-primary hover:text-primary focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-primary focus-visible:ring-offset-2 dark:border-slate-700 dark:text-slate-100"
          >
            Watch on YouTube
          </a>
        </div>
      </div>
      <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
        {featuredLinks.map((link) => (
          <LinkCard {...link} />
        ))}
      </div>
    </div>
  </section>
</BaseLayout>
